<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorStatusBar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_back"
        android:tint="?attr/colorToolbarImage"
        />
    <com.example.gankdemo.custom.view.SearchView
        android:id="@+id/searchView"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="searchView"
        app:hint="搜索干货"
        app:hintColor="?attr/colorToolbarImage"
        app:imageColor="?attr/colorToolbarImage"
        app:textColor="?attr/colorToolbarText"
        app:hasFocusable="true"/>
</LinearLayout>